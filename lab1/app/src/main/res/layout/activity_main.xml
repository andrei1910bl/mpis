<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        >


        <EditText
            android:id="@+id/edit_massage"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edit_message">

        <requestFocus />
        </EditText>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/button_send"
            android:textColor="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/linear1"
        android:layout_marginTop="-4dp">

        <ImageView
            android:id="@+id/cat"
            android:layout_width="wrap_content"
            android:layout_height="359dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img">

        </ImageView>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_alignLeft="@+id/imgview"
        android:layout_alignRight="@+id/imgview"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"

            android:text="Не нравится" />

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:text="Нравится" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"

            android:text="Скачать" />

        <Button
            android:id="@+id/btn_open_browser"
            android:layout_width="165dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="120dp"
            android:layout_marginLeft="75dp"
            android:text="Открыть в браузере" />
    </RelativeLayout>

</RelativeLayout>